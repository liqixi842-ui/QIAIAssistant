# 生产环境配置模板
# 请在服务器上将此文件复制为 .env 并填写实际值

NODE_ENV=production
PORT=5000

# PostgreSQL数据库配置
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@localhost:5432/dongqilai
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=YOUR_DB_PASSWORD
PGDATABASE=dongqilai

# Session密钥（32位以上随机字符串）
SESSION_SECRET=YOUR_RANDOM_SECRET_KEY_MIN_32_CHARS

# OpenAI API配置
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=YOUR_OPENAI_API_KEY
AI_MODEL=gpt-4-turbo

AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1
AI_INTEGRATIONS_OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# 安全配置
ALLOWED_ORIGINS=https://app.detusts.com

# 日志级别
LOG_LEVEL=info
